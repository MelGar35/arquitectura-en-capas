<div>
  <div class="p2">
    <table class="table">
      <thead class="table-dark">
        <h1 class="m-3">Bienvenidos a Shanti</h1>
        <tr>
          <th> Id </th>
          <th> Title </th>
          <th> Description </th>
          <th> Price </th>
          <th> Stock </th>
          <th> Comprar </th>
        </tr>
      </thead>
      <tbody>
        {{#each result.docs}}
        <tr>
          <td> {{this.id}} </td>
          <td> {{this.title}} </td>
          <td> {{this.description}} </td>
          <td> {{this.price}} </td>
          <td> {{this.stock}} </td>
          <td><button>Agregar</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <br>
  <hr>
    <div>
        <a href="/products?page={{result.prevPage}}&&limit=">Prev</a>
        <a href="/products?page={{result.nextPage}}">Next</a>
    </div>
    <h4>
      {{ result.page }} / {{ result.totalPages }}
    </h4>
  <div>
    <h3 class="m-3">Formulario de Productos</h3>
    <form class="row p-3" action="/api/products" method="POST">
      <input class="form-control m-1" type="text" name="title" placeholder="Title...">
      <input class="form-control m-1" type="text" name="description" placeholder="Description...">
      <input class="form-control m-1" type="number" name="price" placeholder="Price...">
      <input class="form-control m-1" type="number" name="stock" placeholder="Stock...">
      <input type="submit" value="Send" class="btn btn-primary">
    </form>
  </div>
</div>